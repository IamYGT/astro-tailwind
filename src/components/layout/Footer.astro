    <!-- Alt kısım - Telif hakkı -->
    <div class="flex flex-col md:flex-row justify-between items-center">
      <p class="text-body text-sm">
        &copy; {currentYear} ECU Tuning Portal. Tüm hakları saklıdır.
      </p>
      <div class="mt-4 md:mt-0">
        <div class="flex space-x-4">
          <img src="/payment/visa.svg" alt="Visa" class="h-8" />
          <img src="/payment/mastercard.svg" alt="Mastercard" class="h-8" />
          <img src="/payment/paypal.svg" alt="PayPal" class="h-8" />
          <img src="/payment/stripe.svg" alt="Stripe" class="h-8" />
        </div>
      </div>
