---
// Navbar bileşeni için gerekli importlar
---

<header class="fixed top-0 left-0 right-0 z-50 bg-blackest bg-opacity-90 backdrop-blur-sm border-b border-white-off">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center text-white">
          <span class="text-primary font-bold text-2xl">ECU</span>
          <span class="font-bold text-2xl">TUNING PORTAL</span>
        </a>
      </div>
      
      <!-- Ana Menü -->
      <nav class="hidden md:flex ml-10 space-x-8 items-center">
        <a href="/" class="text-white hover:text-primary transition duration-200">Ana Sayfa</a>
        <a href="/features" class="text-body hover:text-primary transition duration-200">Özellikler</a>
        <a href="/pricing" class="text-body hover:text-primary transition duration-200">Fiyatlandırma</a>
        <a href="/contact" class="text-body hover:text-primary transition duration-200">İletişim</a>
        <a href="/blog" class="text-body hover:text-primary transition duration-200">Blog</a>
        <a href="/faq" class="text-body hover:text-primary transition duration-200">SSS</a>
      </nav>
      
      <!-- Sağ Kısım (Giriş/Kayıt) -->
      <div class="hidden md:flex items-center space-x-3">
        <a href="/login" class="text-white hover:text-primary transition duration-200">Giriş Yap</a>
        <a href="/register" class="bg-primary hover:bg-primary-alt text-white px-4 py-2 rounded-md transition duration-200">Kayıt Ol</a>
      </div>
      
      <!-- Mobil Menü Butonu -->
      <div class="md:hidden">
        <button type="button" class="text-gray-400 hover:text-white focus:outline-none" aria-label="Toggle menu">
          <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobil Menü (Varsayılan olarak gizli) -->
  <div class="hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="/" class="block px-3 py-2 text-white hover:text-primary transition duration-200">Ana Sayfa</a>
      <a href="/features" class="block px-3 py-2 text-body hover:text-primary transition duration-200">Özellikler</a>
      <a href="/pricing" class="block px-3 py-2 text-body hover:text-primary transition duration-200">Fiyatlandırma</a>
      <a href="/contact" class="block px-3 py-2 text-body hover:text-primary transition duration-200">İletişim</a>
      <a href="/blog" class="block px-3 py-2 text-body hover:text-primary transition duration-200">Blog</a>
      <a href="/faq" class="block px-3 py-2 text-body hover:text-primary transition duration-200">SSS</a>
      <a href="/login" class="block px-3 py-2 text-white hover:text-primary transition duration-200">Giriş Yap</a>
      <a href="/register" class="block px-3 py-2 text-white bg-primary hover:bg-primary-alt rounded-md transition duration-200">Kayıt Ol</a>
    </div>
  </div>
</header>

<script>
  // Mobil menü toggle işlevselliği
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.querySelector('button[aria-label="Toggle menu"]');
    const mobileMenu = document.querySelector('.md\\:hidden + .hidden');
    
    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script> 