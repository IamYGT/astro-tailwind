---
// Navbar bileşeni için gerekli importlar
import LanguageSelectorAstro from "../LanguageSelectorAstro.astro";
import { t } from "../../utils/i18n";
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-blackest bg-opacity-90 backdrop-blur-sm border-b border-white-off"
>
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center text-white">
          <span class="text-primary font-bold text-2xl">ECU</span>
          <span class="font-bold text-2xl">TUNING PORTAL</span>
        </a>
      </div>

      <!-- Ana Menü -->
      <nav class="hidden md:flex ml-10 space-x-8 items-center">
        <a
          href="/"
          class="text-white hover:text-primary transition duration-200"
          data-i18n="common.menu.home">{t("common.menu.home")}</a
        >
        <a
          href="/features"
          class="text-body hover:text-primary transition duration-200"
          data-i18n="common.menu.features">{t("common.menu.features")}</a
        >
        <a
          href="/pricing"
          class="text-body hover:text-primary transition duration-200"
          >Fiyatlandırma</a
        >
        <a
          href="/contact"
          class="text-body hover:text-primary transition duration-200"
          data-i18n="common.menu.contact">{t("common.menu.contact")}</a
        >
        <a
          href="/blog"
          class="text-body hover:text-primary transition duration-200">Blog</a
        >
        <a
          href="/faq"
          class="text-body hover:text-primary transition duration-200">SSS</a
        >
      </nav>

      <!-- Sağ Kısım (Giriş/Kayıt ve Dil Değiştirici) -->
      <div class="hidden md:flex items-center space-x-4">
        <div class="mr-1">
          <LanguageSelectorAstro />
        </div>
        <a
          href="/login"
          class="text-white hover:text-primary transition duration-200"
          data-i18n="common.menu.login">{t("common.menu.login")}</a
        >
        <a
          href="/register"
          class="bg-primary hover:bg-primary-alt text-white px-4 py-2 rounded-md transition duration-200"
          data-i18n="common.menu.register">{t("common.menu.register")}</a
        >
      </div>

      <!-- Mobil Menü Butonu -->
      <div class="md:hidden">
        <button
          type="button"
          class="text-gray-400 hover:text-white focus:outline-none"
          aria-label="Toggle menu"
        >
          <svg
            class="h-6 w-6"
            stroke="currentColor"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobil Menü (Varsayılan olarak gizli) -->
  <div class="hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a
        href="/"
        class="block px-3 py-2 text-white hover:text-primary transition duration-200"
        >{t("common.menu.home")}</a
      >
      <a
        href="/features"
        class="block px-3 py-2 text-body hover:text-primary transition duration-200"
        >{t("common.menu.features")}</a
      >
      <a
        href="/pricing"
        class="block px-3 py-2 text-body hover:text-primary transition duration-200"
        >Fiyatlandırma</a
      >
      <a
        href="/contact"
        class="block px-3 py-2 text-body hover:text-primary transition duration-200"
        >{t("common.menu.contact")}</a
      >
      <a
        href="/blog"
        class="block px-3 py-2 text-body hover:text-primary transition duration-200"
        >Blog</a
      >
      <a
        href="/faq"
        class="block px-3 py-2 text-body hover:text-primary transition duration-200"
        >SSS</a
      >
      <div class="block px-3 py-2">
        <div class="mx-auto max-w-[200px]">
          <LanguageSelectorAstro />
        </div>
      </div>
      <a
        href="/login"
        class="block px-3 py-2 text-white hover:text-primary transition duration-200"
        >{t("common.menu.login")}</a
      >
      <a
        href="/register"
        class="block px-3 py-2 text-white bg-primary hover:bg-primary-alt rounded-md transition duration-200"
        >{t("common.menu.register")}</a
      >
    </div>
  </div>
</header>

<script>
  // Mobil menü toggle işlevselliği
  document.addEventListener("DOMContentLoaded", () => {
    const menuButton = document.querySelector(
      'button[aria-label="Toggle menu"]'
    );
    const mobileMenu = document.querySelector(".md\\:hidden + .hidden");

    if (menuButton && mobileMenu) {
      menuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });
    }
  });
</script>
